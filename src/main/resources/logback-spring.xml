<configuration>
    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <pattern>
                    <pattern>
                        {
                          "level":"%level",
                          "logger":"%logger",
                          "thread":"%thread",
                          "message":"%message",
                          "service":"${spring.application.name:-powerup}",
                          "traceId":"%X{traceId}",
                          "spanId":"%X{spanId}",
                          "requestId":"%X{requestId}",
                          "userId":"%X{userId}",
                          "orderId":"%X{orderId}"
                        }
                    </pattern>
                </pattern>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="JSON"/>
    </root>
</configuration>


